{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",      
    "sourceMap": true,                    
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "*": ["node_modules/*"]
    },    
  },
  "exclude": [
    "node_modules"
  ]  
}